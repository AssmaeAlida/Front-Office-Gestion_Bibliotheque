<div class="row">
    <div class="col">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
             <h2 class="title1">Veuillez remplir le formulaire d'inscription</h2>
                 <h4 class="title2">Merci de compléter les champs suivants!</h4>
          
            <h6 class="title4">
                    Adresse e-mail
                </h6>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form1" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <h6 class="title3">
                    Mot de passe
                </h6>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form2" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
             <h6 class="title5">
                    Confirmer le mot de passe
                </h6>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form3" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn-register">Register</button>
        </form>
    </div>
       <div >
              <img class="image" src="/images/Rectangle 6.png" alt="Description de l'image" />

    </div>
</div>

