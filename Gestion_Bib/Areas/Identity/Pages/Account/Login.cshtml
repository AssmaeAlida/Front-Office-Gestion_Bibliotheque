<h1>@ViewData["Title"]</h1>
<div class="row">
    <div >
        <section>
            <form id="account" method="post">
                <h2 class="title1">Utiliser votre compte pour se connecter</h2>
                 <h4 class="title2">Veuillez entrer vos informations ici!</h4>
            
                <div asp-validation-summary="ModelOnly"></div>
                <h6 class="title3">
                    Adresse e-mail
                </h6>
                <div >
                    <input asp-for="Input.Email" class="form1" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" ></span>
                </div>
                <h6  class="title3">
                    Mot de passe
                </h6>
                <div class="form2">
                    <input asp-for="Input.Password" class="form2" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" ></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn-login">Se connecter</button>
                </div>
                <div class="sous-titre">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Se connecter avec un autre compte</a>
                    </p>
                   
                </div>
            </form>
        </section>
    </div>
    <div >
              <img class="image" src="/images/Rectangle 6.png" alt="Description de l'image" />

    </div>
</div>

